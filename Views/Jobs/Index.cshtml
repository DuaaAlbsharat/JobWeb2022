@model IEnumerable<JobWeb2022.Models.Job>

@{
    ViewBag.Title = "قائمة الوظائف";
}

<h3 class="ListJob">قائمة الوظائف</h3>

<p>
    @Html.ActionLink("إنشاء وظيفة جديدة", "Create",new {@class="btn btn-primary"})
</p>

<table class="table table-bordered table-hover m-0">
    <tr class="bg-secondary">
        <th class="text-white">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th class="text-white">
            @Html.DisplayNameFor(model => model.JobTile)
        </th>
        <th class="text-white">
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th class="text-white">
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobContent)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(model=>item.JobImage)" class="thumbnail" style="width: 48px ;height:48px" />
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.JobId }) |
            @Html.ActionLink("التفاصيل", "Details", new { id=item.JobId }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.JobId })
        </td>
    </tr>
}

</table>
