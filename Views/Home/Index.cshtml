@model IEnumerable<JobWeb2022.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info ">
    <h2> مرحبا بك عزيزي الزائر </h2>
    <p class="lead">  مرحبا بك في فضاء البحث عن الوظائف باختلاف اصنافها, يمكنك نشر الوظيفة اذا كنت ناشر , ويمكن البحث عن وظيفة اذا كنت باحثا عن الوظيفه </p>
    <p><a href="http://asp.net" class="btn btn-primary">المزيد من التفاصيل</a></p>

</div>

@foreach (var item in Model)
{
    <div >
        <div class="bg-dark"><h1 class="text-white cateTitle"> @Html.DisplayFor(modelItem => item.CategoryName)</h1> </div>


        <div class="row ">
            <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
            @foreach (var subItem in item.Jobs)
            {
        <div class="col-md-3 thumbnail" style="margin-bottom:30px ; margin-right:20px">
            <img src="~/Uploads/@subItem.JobImage" class="ImageHome"/>
            <h3>@Html.DisplayFor(modelItem => subItem.JobTile)</h3>
            <p class="lead"> @Html.Raw(HttpUtility.HtmlDecode(subItem.JobContent))</p>
            @Html.ActionLink("التفاصيل", "Details", new { jobId = subItem.JobId }, new { @class = "btn btn-primary" })
            
        </div>

            }
        </div>
    </div>
}
