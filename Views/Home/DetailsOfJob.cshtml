@model JobWeb2022.Models.ApplyForJob

@{
    ViewBag.Title = "DetailsOfJob";
}

<h3 class="ListJob"> تفاصيل الوظيفة</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            الرسالة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            تاريخ الارسال
        </dt>

        <dd>
